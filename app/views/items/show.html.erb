
<div id="pdf">
<% if @item.file.attached? %>
    <iframe src="<%= (url_for(@item.file)) %>" width="100%" height="680" style="border: none;"> </iframe>
<%end%>

<p>
    <strong>Name:</strong>
    <%= @item.name %>
</p>

<p>
    <strong>Description:</strong>
    <%= @item.description %>
</p>

<p>
    <strong>File name:</strong>
    <%= @item.url %>
</p>


<%= link_to '<button type="button" class="btn btn-primary">Download FILE</button>'.html_safe, repo_item_download_file_path(@repo, @item) %>
<%= link_to '<button type="button" class="btn btn-secondary">Back</button>'.html_safe, repo_path(@repo) %>

</div>