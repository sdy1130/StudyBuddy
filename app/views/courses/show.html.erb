<div class = "course_header">
<%= image_tag ("default-course-header.png"), :class => "default_header_image"%>
<h2 class = "course_title"><%= @course.code %> <%= @course.name %></h2>
</div>

<div class = "course_page">
<div class = "course_page_lower_container">
<div class = "course_page_container">
  
  <div class = "course_page_left_container">
  <div class = "course_post">
  
    <div class = "post_header">
        <div><h4 class = "course_title">Create Post</h4></div>
    </div>
    <div class = "line_break"> </div>
    <%= link_to 'Create Post', new_course_post_path(@course) %></td>

  
  </div>
  <% @course.posts.each do |post| %>
  <div class = "course_post">
  <div>
      <div class = "post_header">
        <div><h4 class = "course_title"><%= post.category %> - <%= post.title %></h4></div>
        <div>Posted by user: <%= link_to "#{@users.find(post.user_id).user_name}", users_profile_path(@users.find(post.user_id)) %></div>
      </div>
      <div class = "line_break"> </div>
      <%= link_to 'Show', course_post_path(post.course, post) %>
      <% if current_user && current_user.id == post.user_id %>
        <%= link_to 'Edit', edit_course_post_path(post.course, post) %>
        <%= link_to 'Destroy', course_post_path(post.course, post),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
      <% end %>
  </div>
  </div>
  <% end %>
  </div>
</div>

 <div class = "course_page_right_container">
  <div class = "course_right_sub_container">
  <div class = "course_right_info_container">
  <h4 class = "course_title"> <%= @course.code %> <%= @course.name %> </h4>
  <div class = "line_break"> </div>
  <%= @course.description %>
</div>
  <% if !@course.users.include?(current_user)%>
    <div class = "back_button_container">
    <%= button_to 'Join', join_course_path(:course_id => @course), :class => "button", :form_class => "button_to"%>
    <!-- <%= button_to 'BACK', courses_path, :method => "get", :class => "button", :form_class => "button_to" %> -->
    </div>
  <% end %>
  </div>

  <div class = "course_right_sub_container">
  <div class = "course_right_info_container">
  <h4 class = "course_title">Public Repos</h4>
  <div class = "line_break"> </div>
  <% if @course.repo.any?%>
  <% @course.repo.each do |r| %>
  <div>
      <div class = "post_header">
        <div><h4 class = "course_title"><%= r.title %> repo</h4></div>
        <div>Posted by user: <%= r.user_id %></div>
      </div>
      <div class = "line_break"> </div>
  </div>
  <% end %>
  <% else %>
    No public repos
  <% end %>
  </div>
  </div>
  </div>

</div>

</div>
