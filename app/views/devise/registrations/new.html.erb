<div class = "signup">
<div class = "signup_container">
<div class = "signup_form">
<h2 class = "signup_title"> Sign up </h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class ="signup_field_margin">
    <%= f.text_field :user_name, autofocus: true,
        :placeholder => "User name",
        :class => "signup_field"%>
    </div>

    <div class ="signup_field_margin">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
        :placeholder => "Email",
        :class => "signup_field"%>
    </div>
            
    <div class ="signup_field_margin">
      <%= f.text_field :first_name, autofocus: true,
          :placeholder => "First name",
          :class => "signup_field signup_first_name_field"%>
      <%= f.text_field :last_name, autofocus: true,
          :placeholder => "Last name",
          :class => "signup_field signup_last_name_field"%>
    </div>

    <div class ="signup_field_margin">
      <%= f.password_field :password, autocomplete: "new-password",
          :placeholder => "Password",
          :class => "signup_field"%>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class ="signup_field_margin">
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
        :placeholder => "Confirm password",
        :class => "signup_field"%>
    </div>

    <div class ="signup_field_margin">
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
      <% end %>
    </div>

    <div>
    <% if resource.errors.any? %>
      <p class = "signup_error_messages">Invalid email or password</p>
    <% end %>
    </div>

    <div>
      <%= f.submit "Sign up", :class => "signup_button" %>
    </div>
  <% end %>

  <%= render 'layouts/devise_alerts' %>

</div>
<div class = "signup_image">
  <figure><%= image_tag ("signup-image.jpg") %></figure>
</div>
</div>
</div>
