<div class="container post-form">
  <div class="post-image">
    <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
  </div>
  <%= form_with(model: [ @course, @course.posts.build ], local: true, :html => {:id => "new_post"}) do |form| %>
  <% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@post.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <h3>Create a new post</h3>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.text_field :title, :class=>"form-control",:placeholder=>"title"%>
      </div>
      <div class="form-group">

      </div>
      <div class="form-group">
        <%= form.select :category, ['Tutoring', 'Studymate', 'Question'],:class=>"form-control"%>
      </div>

    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.text_area :description, :class=>"form-control",:placeholder=>"description" %>
      </div>
      <div class="form-group">
        <%= form.submit :class=>"btnContact" %>
        <%= link_to '<button type="button" class="btnBack">Back</button>'.html_safe, course_path(@course) %>
      </div>
    </div>
  </div>
  <% end %>
</div>
