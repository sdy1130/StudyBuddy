<%= form_with scope: :offering, url: offerings_path do |f| %>

  <div id="error_explanation">
    <h2>
      <%= pluralize(@offering.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
      <% @offering.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <%= f.label "Course code and name: " %>
  <%= f.collection_select :course_id, Course.all, :id, lambda {|u| "#{u.code} - #{u.name}"}, {:prompt => "Please select course"} %><br>

  <%= f.label "Cost ($)" %>
  <%= f.number_field :cost, min: 0, step: 0.01 %>
  <br>

  <%= f.label "Start time:" %><br>
  <%= f.datetime_select :startTime %>
  <br>

  <%= f.label "End time:" %> <br>
  <%= f.datetime_select :endTime %>
  <br>

  <%= f.label "Street address:" %>
  <%= f.text_field :street %>
  <br>

  <%= f.label :city %>
  <%= f.text_field :city %>
  <br>

  <%= f.label :province %>
  <%= f.text_field :province %>
  <br>

  <%= f.label :country %>
  <%= f.text_field :country %>
  <br>

  <%= f.submit :class=>"btnContact" %>
  <%= link_to '<button type="button" class="btnBack">Back</button>'.html_safe, root_path %>

<% end %>