
<h1>Listing Repos</h1>
<%= link_to 'New repo', new_repo_path %>
<%= link_to 'Home', root_path%>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
 
  <% @repos.each do |repo| %>
    <tr>
      <td><%= repo.name %></td>
      <td><%= repo.description %></td>
      <td><%= link_to 'Show', repo_path(repo) %></td>
      <td><%= link_to 'Edit', edit_repo_path(repo) %></td>
      <td><%= link_to 'Destroy', repo_path(repo),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>